# Number in parens is the button id that SDL assigns

# I use `BTN_*` instead of `KEY_*` so that Wiimote button presses do not have
# any other interactions with the system
Wiimote.A       = BTN_A       # (4)
Wiimote.B       = BTN_B       # (5)
Wiimote.Up      = BTN_BASE    # (0)
Wiimote.Down    = BTN_BASE2   # (1)
Wiimote.Left    = BTN_BASE3   # (2)
Wiimote.Right   = BTN_BASE4   # (3)
Wiimote.Minus   = BTN_BACK    # (14)
Wiimote.Plus    = BTN_FORWARD # (13)
Wiimote.Home    = BTN_START   # (10)
Wiimote.1       = BTN_X       # (7)
Wiimote.2       = BTN_Y       # (8)

Nunchuk.C       = BTN_C       # (6)
Nunchuk.Z       = BTN_Z       # (9)

# Using `ABS_HAT0X` binds the nunchuck stick to a joystick. If `ABS_X` was used
# instead, the joystick would move the mouse (which I don't want).
Nunchuk.Stick.X = ABS_HAT0X # (Axis 0)
Nunchuk.Stick.Y = ABS_HAT0Y # (Axis 1)

